<CustoFinanceiroMensalScreen>:
    id: custofinmen
    name: "custofinmen"
    size_hint: 0.1,0.1
    custo: custo

    Label:
        text: 'Custo Financeiro Mensal'
        font_size: 0.6*self.height
        pos_hint: {'top':9,'right':5.5}
        size_hint: 1, 1


    Label:
        text: 'Custo:'
        font_size: 0.4*self.height
        pos_hint: {'top': 8, 'right': 1.8}
        size_hint: 1,1

    TextInput:
        name: "custo"
        id: custo
        font_size: 0.6*self.height
        pos_hint: {'top': 7.7, 'right': 3.7}
        size_hint: 2,.45
        multiline: False

    SendButton:
        on_release: custofinmen.envia()
    Voltar:
        on_release: app.root.current = "cadastro"