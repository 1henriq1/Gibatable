
<Investimento>:
    id: investimento
    name: "investimento"
    size_hint: 0.1,0.1
    descr: descr
    quant: quant
    vunit: vunit
    categoria: categoria

    Label:
        text: 'Investimentos Fixos'
        font_size: 0.6*self.height
        pos_hint: {'top':9,'right':5.5}
        size_hint: 1, 1


    Label:
        text: 'Descricao:'
        font_size: 0.4*self.height
        pos_hint: {'top': 8, 'right': 1.8}
        size_hint: 1,1

    TextInput:
        name: "descr"
        id: descr
        font_size: 0.6*self.height
        pos_hint: {'top': 7.7, 'right': 3.7}
        size_hint: 2,.45
        multiline: False

    Label:
        text: 'Quantidade:'
        font_size: 0.4*self.height
        pos_hint: {'top': 7, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "quantidade"
        id: quant
        font_size: 0.6*self.height
        pos_hint: {'top': 6.7, 'right': 2.7}
        size_hint: .5,.45
        multiline: False

    Label:
        text: 'Valor Unitario:'
        font_size: 0.4*self.height
        pos_hint: {'top': 6, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "vunit"
        id: vunit
        font_size: 0.6*self.height
        pos_hint: {'top': 5.7, 'right': 2.7}
        size_hint: .5,.45
        multiline: False

    Label:
        text: 'Categoria:'
        font_size: 0.4*self.height
        pos_hint: {'top': 5, 'right': 2}
        size_hint: 1,1

    Spinner:
        name: "categoria"
        id: categoria
        font_size: 0.4*self.height
        pos_hint: {'top': 4.7, 'right': 3}
        size_hint: 2,.45
        text: '-'
        values: ('Moveis e Utensilios', 'Maquinas e Equipamentos', 'Computadores/Equipamentos de Informatica', 'Fixos em Veiculos', 'Imoveis Predios', 'Imoveis Terrenos')

    SendButton:
        on_release: investimento.envia()
    Voltar:
        on_release: app.root.current = "cadastro"