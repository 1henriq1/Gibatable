<EstimativaScreen>:
    id: estimativa
    name: "estimativa"
    descr: descr
    quant: quant
    lucro: lucro
    mes: mes
    GridLayout:
        cols:1
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 60
        Label:
            text: 'Estimativa de Vendas'
            font_size: 0.6*self.height
            size_hint: 1,None
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,1
            ScrollView:
                height: root.height * 1.5
                GridLayout:
                    cols: 2
                    height: self.minimum_height
                    padding: 100
                    spacing: 50
                    row_default_height: 60
                    col_default_width: 100
                    size_hint: 1,None
                    Label:
                        text: 'Descricao'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:
                        descr: descr
                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "descr"
                            id: descr
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
                    Label:
                        text: 'Quantidade:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 3
                        spacing: 140
                        TextInput:
                            name: "quantidade"
                            id: quant
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""
                        Label:
                            text: ""
                    Label:
                        text: 'Lucro:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 3
                        spacing: 80
                        size_hint: 1,1
                        TextInput:
                            name: "lucro"
                            id: lucro
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""
                        Label:
                            text: ""
                    Label:
                        text: 'Mes:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 2
                        spacing: 80
                        size_hint: 1,1
                        TextInput:
                            name: "mes"
                            id: mes
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""


        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 0.1, 0.1
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            SendButton:
                on_release: pessoa.envia()
            Voltar:
                on_release: app.root.current = "cadastro"