<CapGiroScreen>:
    id: capgiro
    name: "capgiro"
    avista: avista
    tres: tres
    seis: seis
    nov: nov
    capsocial: capsocial
    reservas: reservas
    GridLayout:
        cols:1
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 60
        Label:
            text: 'Outros cadastros necessarios'
            font_size: 0.6*self.height
            size_hint: 1,None
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,1
            ScrollView:
                height: root.height * 1.5
                GridLayout:
                    cols: 2
                    height: self.minimum_height
                    padding: 100
                    spacing: 50
                    row_default_height: 60
                    col_default_width: 100
                    size_hint: 1,None
                    Label:
                        text: 'Reservas %:'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:

                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "reservas"
                            id: reservas
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
                    Label:
                        text: 'Prazo a vista:'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:

                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "avista"
                            id: avista
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
                    Label:
                        text: 'Prazo a 30 dias:'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:

                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "tres"
                            id: tres
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
                    Label:
                        text: 'Prazo a 60 dias:'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:

                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "seis"
                            id: seis
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
                    Label:
                        text: 'Prazo a 90 dias:'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:

                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "nov"
                            id: nov
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
                    Label:
                        text: 'Categoria:'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:

                        cols: 2
                        spacing: 40
                        Spinner:
                            name: "categoria"
                            id: categoria
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                            text: "-"
                            values: ('Recebimentos', 'Pagamentos')

                        Label:
                            text: ""
                    Label:
                        text: 'Capital Social:'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:

                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "capsocial"
                            id: capsocial
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 0.1, 0.1
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            SendButton:
                on_release: capgiro.envia()
            Voltar:
                on_release: app.root.current = "cadastro"