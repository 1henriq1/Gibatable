<CustosFixosScreen>:
    id: custofixo
    name: "custofixo"
    limp: limp
    cont: cont
    mat: mat
    agua: agua
    aluguel: aluguel
    man: man
    outros: outros
    GridLayout:
        cols:1
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 60
        Label:
            text: 'Custos Fixos Mensais'
            font_size: 0.6*self.height
            size_hint: 1,None
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,1
            ScrollView:
                height: root.height * 1.5
                GridLayout:
                    cols: 2
                    height: self.minimum_height
                    padding: 100
                    spacing: 50
                    row_default_height: 60
                    col_default_width: 100
                    size_hint: 1,None
                    Label:
                        text: 'Limpeza'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:
                        limp:limp
                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "limp"
                            id: limp
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
                    Label:
                        text: 'Honorarios do contador:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 3
                        spacing: 140
                        TextInput:
                            name: "cont"
                            id: cont
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""
                        Label:
                            text: ""
                    Label:
                        text: 'Material de expediente:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 3
                        spacing: 80
                        size_hint: 1,1
                        TextInput:
                            name: "mat"
                            id: mat
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""
                        Label:
                            text: ""
                    Label:
                        text: 'Agua e luz:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 2
                        spacing: 80
                        size_hint: 1,1
                        Spinner:
                            name: "agua"
                            id: agua
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""
                        Label:
                            text: ""
                    Label:
                        text: 'Aluguel:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 2
                        spacing: 80
                        size_hint: 1,1
                        Spinner:
                            name: "aluguel"
                            id: aluguel
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""
                        Label:
                            text: ""
                    Label:
                        text: 'Manutencao:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 2
                        spacing: 80
                        size_hint: 1,1
                        Spinner:
                            name: "man"
                            id: man
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""
                        Label:
                            text: ""
                    Label:
                        text: 'Outros:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    GridLayout:
                        cols: 2
                        spacing: 80
                        size_hint: 1,1
                        Spinner:
                            name: "outros"
                            id: outros
                            font_size: 0.6*self.height
                            size_hint: .5,.45
                            multiline: False
                        Label:
                            text: ""

        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 0.1, 0.1
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            SendButton:
                on_release: pessoa.envia()
            Voltar:
                on_release: app.root.current = "cadastro"