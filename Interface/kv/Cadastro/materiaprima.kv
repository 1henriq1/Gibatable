<MateriaPrimaScreen>
    id: matprima
    name: "matprima"
    size_hint: 0.1,0.1
    nome: nome
    materia: materia
    medida: medida
    preco: preco
    quant: quant

    Label:
        text: 'Materia Prima'
        font_size: 0.6*self.height
        pos_hint: {'top':9,'right':5.5}
        size_hint: 1, 1

    Label:
        text: 'Nome da materia prima:'
        font_size: 0.4*self.height
        pos_hint: {'top': 8, 'right': 1.8}
        size_hint: 1,1

    TextInput:
        name: "nome"
        id: nome
        font_size: 0.6*self.height
        pos_hint: {'top': 7.7, 'right': 3.7}
        size_hint: 2,.45
        multiline: False

    Label:
        text: 'Descricao:'
        font_size: 0.4*self.height
        pos_hint: {'top': 7, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "materia"
        id: materia
        font_size: 0.6*self.height
        pos_hint: {'top': 6.7, 'right': 3.7}
        size_hint: 2,.45
        multiline: False

    Label:
        text: 'Unidade de Medida:'
        font_size: 0.4*self.height
        pos_hint: {'top': 6, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "medida"
        id: medida
        font_size: 0.6*self.height
        pos_hint: {'top': 5.7, 'right': 3.7}
        size_hint: 2,.45
        multiline: False

    Label:
        text: 'Preco:'
        font_size: 0.4*self.height
        pos_hint: {'top': 5, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "preco"
        id: preco
        font_size: 0.6*self.height
        pos_hint: {'top': 4.7, 'right': 2.7}
        size_hint: .5,.45
        multiline: False

    Label:
        text: 'Quantidade:'
        font_size: 0.4*self.height
        pos_hint: {'top': 4, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "quantidade"
        id: quant
        font_size: 0.6*self.height
        pos_hint: {'top': 3.7, 'right': 2.7}
        size_hint: .5,.45
        multiline: False



    SendButton:
        on_release: matprima.envia()
    Voltar:
        on_release: app.root.current = "cadastro"