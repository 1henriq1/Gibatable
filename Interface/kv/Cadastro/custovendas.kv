<CustoVendasScreen>
    id: custovendas
    name: "custovendas"
    size_hint: 0.1,0.1
    descricao: descricao
    porc: porc

    Label:
        text: 'Custos com Vendas'
        font_size: 0.6*self.height
        pos_hint: {'top':9,'right':5.5}
        size_hint: 1, 1

    Label:
        text: 'Descricao do custo:'
        font_size: 0.4*self.height
        pos_hint: {'top': 8, 'right': 1.8}
        size_hint: 1,1

    TextInput:
        name: "descricao"
        id: descricao
        font_size: 0.6*self.height
        pos_hint: {'top': 7.7, 'right': 3.7}
        size_hint: 2,.45
        multiline: False

    Label:
        text: 'Porcentagem:'
        font_size: 0.4*self.height
        pos_hint: {'top': 7, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "porc"
        id: porc
        font_size: 0.6*self.height
        pos_hint: {'top': 6.7, 'right': 3.7}
        size_hint: 2,.45
        multiline: False

    Label:
        text: '%'
        font_size: 0.4*self.height
        pos_hint: {'top': 6.7, 'right': 4}
        size_hint: 1,1
    SendButton:
        on_release: custovendas.envia()
    Voltar:
        on_release: app.root.current = "cadastro"