<PessoaScreen>:
    id: pessoa
    name: "pessoa"
    scrl: scrl

    GridLayout:
        cols:1
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 60
        Label:
            text: 'Gastos com pessoal'
            font_size: 0.6*self.height
            size_hint: 1,None
        BoxLayout:
            orientation: 'vertical'
            scrl: scrl

            ScrollView:
                scrl: scrl
                height: root.height * 1.5

                GridLayout:
                    cols: 2
                    id: scrl
                    height: self.minimum_height
                    padding: 100
                    spacing: 50
                    row_default_height: 60
                    col_default_width: 100
                    size_hint: 1,None
                    Label:
                        text: 'Cargo'
                        font_size: 0.4*self.height
                        size_hint: 1,.1
                    GridLayout:
                        cargo: cargo
                        cols: 2
                        spacing: 40
                        TextInput:
                            name: "cargo"
                            id: cargo
                            font_size: 0.6*self.height
                            size_hint: 2,.45
                            multiline: False
                        Label:
                            text: ""
                    Label:
                        text: 'Quantidade:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    TextInput:
                        name: "quantidade"
                        id: quant
                        font_size: 0.6*self.height
                        size_hint: .5,.45
                        multiline: False
                    Label:
                        text: 'Salario:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    TextInput:
                        name: "salario"
                        id: salario
                        font_size: 0.6*self.height
                        size_hint: .5,.45
                        multiline: False
                    Label:
                        text: 'Categoria:'
                        font_size: 0.4*self.height
                        size_hint: 1,1
                    Spinner:
                        name: "categoria"
                        id: categoria
                        font_size: 0.4*self.height
                        size_hint: .8,.45
                        text: '-'
                        values: ('Produtor', 'Administrativo', 'Diretor')


        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 0.1, 0.1
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            SendButton:
                on_release: pessoa.envia()
            Voltar:
                on_release: app.root.current = "cadastro"