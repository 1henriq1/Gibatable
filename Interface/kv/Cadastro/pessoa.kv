<PessoaScreen>:
    id: pessoa
    name: "pessoa"
    size_hint: 0.1,0.1
    cargo: cargo
    quant: quant
    salario: salario
    categoria: categoria

    Label:
        text: 'Gastos com pessoal'
        font_size: 0.6*self.height
        pos_hint: {'top':9,'right':5.5}
        size_hint: 1, 1

    Label:
        text: 'Cargo:'
        font_size: 0.4*self.height
        pos_hint: {'top': 8, 'right': 1.8}
        size_hint: 1,1

    TextInput:
        name: "cargo"
        id: cargo
        font_size: 0.6*self.height
        pos_hint: {'top': 7.7, 'right': 3.7}
        size_hint: 2,.45
        multiline: False

    Label:
        text: 'Quantidade:'
        font_size: 0.4*self.height
        pos_hint: {'top': 7, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "quantidade"
        id: quant
        font_size: 0.6*self.height
        pos_hint: {'top': 6.7, 'right': 2.7}
        size_hint: .5,.45
        multiline: False

    Label:
        text: 'Salario:'
        font_size: 0.4*self.height
        pos_hint: {'top': 6, 'right': 2}
        size_hint: 1,1

    TextInput:
        name: "salario"
        id: salario
        font_size: 0.6*self.height
        pos_hint: {'top': 5.7, 'right': 2.7}
        size_hint: .5,.45
        multiline: False

    Label:
        text: 'Categoria:'
        font_size: 0.4*self.height
        pos_hint: {'top': 5, 'right': 2}
        size_hint: 1,1

    Spinner:
        name: "categoria"
        id: categoria
        font_size: 0.4*self.height
        pos_hint: {'top': 4.7, 'right': 3}
        size_hint: .8,.45
        text: '-'
        values: ('Produtor', 'Administrativo', 'Diretor')


    SendButton:
        on_release: pessoa.envia()
    Voltar:
        on_release: app.root.current = "cadastro"
