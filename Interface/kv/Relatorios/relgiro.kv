<RelGiroScreen>:
    id: relgiro
    name: "relgiro"
    GridLayout:
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 120
        spacing: 0
        Label:
            text: 'Calculos para capital de giro'
            font_size: 0.6*self.height
            size_hint: 0.1, 0.1
            padding_y: 150
            halign: 'center'
            valign: 'center'
        BoxLayout:
            padding: 30
            size_hint: 1,1
            ScrollView:
                height: root.height * 1.5
                GridLayout:
                    id: scrl
                    name: "scrl"
                    cols: 3
                    height: self.minimum_height
                    padding: 100
                    spacing: 25
                    row_default_height: 100
                    col_default_width: 100
                    size_hint: 1,None
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Recebimentos"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 80
                        on_release: app.root.current= "relrecebimentos"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Pagamentos"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 80
                        on_release: app.root.current = "relpagamentos"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Contas a receber e a pagar apos 12 mes, receita anual, custo anual com material direto, pmrv, pmpc, pmre"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 80
                        on_release: app.root.current = "relmin"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Capital de giro"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 80
                        on_release: app.root.current = "relcapgiro"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Investimentos pre-operacionais"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 40
                        on_release: app.root.current = "relinvpreop"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Calculo da necessidade de capital de giro em dias"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 40
                        on_release: app.root.current = "relcalc"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Caixa Minimo"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 40
                        on_release: app.root.current = "relcaixamin"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Balanco inicial"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 40
                        on_release: app.root.current = "relbalancoini"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Balanco projetado"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 40
                        on_release: app.root.current = "relbalancoproj"
                    Button:
                        font_size: 0.3*self.height
                        size_hint: .1,.1
                        text:"Origem e fonte dos recursos"
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 40
                        on_release: app.root.current = "relrecursos"
        GridLayout:
            cols: 2
            size_hint: .1, .1
            row_default_height: 5
            col_default_width: 120
            font_size: 0.2 * self.height
            spacing:
            Label:
                text: ""
            Voltar:
                font_size: 0.3*self.height
                size_hint: 0.1, None
                text_size: self.size
                halign: 'center'
                valign: 'center'
                padding_y: 10
                on_release: app.root.current = "relatoriosfin"