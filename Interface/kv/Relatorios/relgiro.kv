<RelGiroScreen>:
    id: relgiro
    name: "relgiro"
    GridLayout:
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 60
        spacing: 50
        Label:
            text: 'Calculo para capital de giro'
            font_size: 0.6*self.height
            size_hint: 0.1, 0.1
        BoxLayout:
            padding: 30
            GridLayout:
                cols: 3
                spacing: 150
                height: self.minimum_height
                size_hint: 1,1
                row_default_height: 120
                row_force_default: True
                font_size: 0.2 * self.height
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Recebimentos"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current= "relrecebimentos"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Pagamentos"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relpagamentos"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Contas a receber e a pagar apos 12 mes, receita anual, custo anual com material direto, pmrv, pmpc, pmre"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relmin"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Capital de giro"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relcapgiro"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Investimentos pre-operacionais"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relinvpreop"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Calculo da necessidade de capital de giro em dias"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relcalc"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Caixa Minimo"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relcaixamin"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Balanco inicial"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relbalancoini"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Balanco projetado"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relbalancoproj"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Origem dos recursos"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relorigem"
                Button:
                    font_size: 0.2*self.height
                    size_hint: .1,.1
                    text:"Fonte dos recursos"
                    text_size: self.size
                    halign: 'center'
                    valign: 'center'
                    padding_y: 10
                    on_release: app.root.current = "relfonte"
        GridLayout:
            cols: 2
            height: self.minimum_height
            size_hint: .1, .1
            row_default_height: 20
            font_size: 0.2 * self.height
            Label:
                text: ""
            Voltar:
                size_hint: 0.1, 0.1
                text_size: self.size
                halign: 'center'
                valign: 'center'
                padding_y: 10
                on_release: app.root.current = "relatoriosfin"