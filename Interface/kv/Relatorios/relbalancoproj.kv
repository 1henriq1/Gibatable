<RelBalancoProjScreen>:
    id: relbalancoproj
    name: "relbalancoproj"
    scrl: scrl
    title:title
    back:back
    GridLayout:
        cols:1
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 60
        Label:
            id: title
            name: "title"
            font_size: 0.6*self.height
            size_hint: 1,None
        BoxLayout:
            height: self.minimum_height
            padding: 30
            size_hint: 1,1
            ScrollView:
                height: root.height * 1.5
                GridLayout:
                    id: scrl
                    name: "scrl"
                    cols: 4
                    height: self.minimum_height
                    spacing: 0,-10
                    row_default_height: 35
                    col_default_width: 100
                    size_hint: 1,None

        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 1, None
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            id: back
            name: "back"