<RelPessoaOpScreen>:
    id: relpessoaop
    name: "relpessoaop"
    scrl: scrl
    GridLayout:
        cols:1
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 60
        Label:
            text: 'GASTOS COM PESSOAL DA PRODUCAO'
            font_size: 0.6*self.height
            size_hint: 1,None
        BoxLayout:
            orientation: 'vertical'
            scrl: scrl

            ScrollView:
                scrl: scrl
                height: root.height * 1.5

                GridLayout:
                    cols: 9
                    id: scrl
                    height: self.minimum_height
                    padding: 100
                    spacing: 50
                    row_default_height: 60
                    col_default_width: 100
                    size_hint: 1,None

        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 0.1, 0.1
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            Label:
                text: ''
            Voltar:
                on_release: app.root.current = "relpessoa"