<RelBalancoIniScreen>:
    id: relbalancoini
    name: "relbalancoini"
    scrl: scrl
    title:title
    back:back
    GridLayout:
        cols:1
        rows:3
        height: self.minimum_height
        row_default_height: 40
        spacing:0
        Label:
            id: title
            name: "title"
            font_size: 0.6*self.height
            size_hint: 0.5,None
        BoxLayout:
            height: self.minimum_height
            padding: 30
            size_hint: 1,None
            GridLayout:
                id: scrl
                name: "scrl"
                cols: 4
                height: self.minimum_height

                spacing: 0,-10
                row_default_height: 35
                col_default_width: 100
                size_hint: 1, None
                row_force_default: True
                #canvas.before:
                 #   Color:
                 #       rgba: 1, .5, 0, 1
                 #   Rectangle:
                 #       pos: self.pos
                 #       size: self.size


        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 1, None
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            id: back
            name: "back"