<RelPessoaScreen>:
    id: relpessoa
    name: "relpessoa"

    GridLayout:
        rows:3
        height: self.minimum_height
        row_default_height: 60
        spacing: 50
        Label:
            text: 'Gastos com Pessoal'
            font_size: 0.6*self.height
            size_hint: .1, .1
        BoxLayout:
            padding: 30
            GridLayout:
                cols: 3
                row_default_height: 60
                height: self.minimum_height
                Label:
                    text: ''
                GridLayout:
                    rows: 3
                    height: self.minimum_height
                    spacing: 25
                    row_default_height: 30

                    Button:
                        font_size: 0.2*self.height
                        size_hint: .1,.1
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 10
                        text: 'GASTOS COM PESSOAL DE PRODUCAO'
                        on_release: app.root.current = 'relpessoaop'
                    Button:
                        font_size: 0.2*self.height
                        size_hint: .1,.1
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 10
                        text: 'GASTOS COM PESSOAL ADMINISTRATIVO'
                        on_release: app.root.current = 'relpessoaadm'
                    Button:
                        font_size: 0.2*self.height
                        size_hint: .1,.1
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 10
                        text: 'GASTOS COM DIRECAO'
                        on_release: app.root.current = 'relpessoadir'
                Label:
                    text: ''
        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 0.1, 0.1
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            Label:
                text: ''
            Voltar:
                on_release: app.root.current = "relatorio"