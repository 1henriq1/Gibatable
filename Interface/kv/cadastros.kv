<Cadastro>:
    size_hint: 0.1,0.1
    name: "cadastro"
    Label:
        text: 'Cadastros'
        font_size: 0.6*self.height
        pos_hint: {'top':9,'right':5.5}
        size_hint: 1, 1
    Button:
        font_size: 0.4*self.height
        text:'Pessoa'
        pos_hint: {'top':7, 'right': 6}
        on_release: app.root.current = "pessoa"
        size_hint: 2, .8
    Voltar:
        on_release: app.root.current = "menu"

<Pessoa>:
    name: "pessoa"
    size_hint: 0.1,0.1

    Label:
        text: 'Gastos com pessoal'
        font_size: 0.6*self.height
        pos_hint: {'top':9,'right':5.5}
        size_hint: 1, 1

    Label:
        text: 'Cargo: '
        font_size: 0.4*self.height
        pos_hint: {'top': 7, 'right': 3}
        size_hint: 1,1

    TextInput:
        id: cargo
        font_size: 0.6*self.height
        pos_hint: {'top': 6.7, 'right': 6}
        size_hint: 3,.4
        multiline: False

    Voltar:
        on_release: app.root.current = "cadastro"