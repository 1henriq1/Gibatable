<AlterarScreen>:
    name: "alterar"
    id: alterar
    GridLayout:
        rows: 3
        spacing: 30
        row_default_height: 60
        height: self.minimum_height
        Label:
            text: 'Alterar Dados'
            font_size: 0.6*self.height
            pos_hint: {'top':9,'right':5.5}
            size_hint: 0.1, 0.1
        BoxLayout:
            padding: 30
            GridLayout:
                cols:2
                spacing: 30
                row_default_height: 60
                height: self.minimum_height
                Button:
                    font_size: 0.4*self.height
                    text:'Pessoa'
                    pos_hint: {'top':7, 'right': 5}
                    on_release: app.root.current = "altpessoa"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Investimentos Fixos'
                    pos_hint: {'top':7, 'right': 7}
                    on_release: app.root.current = "altinvfixo"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Materia Prima'
                    pos_hint: {'top':6, 'right': 5}
                    on_release: app.root.current = "altmatprima"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Estimativa de Vendas'
                    pos_hint: {'top':6, 'right': 7}
                    on_release: app.root.current = "altestimativa"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Custos Fixos Mensais'
                    pos_hint: {'top':5, 'right': 7}
                    on_release: app.root.current = "custofixo"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Tributos'
                    pos_hint: {'top':5, 'right': 5}
                    on_release: app.root.current = "tributo"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Custo com Vendas'
                    pos_hint: {'top':4, 'right': 5}
                    on_release: app.root.current = "custovendas"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Investimento Inicial'
                    pos_hint: {'top':4, 'right': 7}
                    on_release: app.root.current = "investimentoinicial"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Custo Financeiro Mensal'
                    pos_hint: {'top':3, 'right': 5}
                    on_release: app.root.current = "custofinmen"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Rateio dos Custos Fixos'
                    pos_hint: {'top':3, 'right': 7}
                    on_release: app.root.current = "rateiocustosfixos"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Rateio dos Custos Operacionais'
                    pos_hint: {'top':2, 'right': 5}
                    on_release: app.root.current = "rateiocustosop"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Preco de Venda'
                    pos_hint: {'top':2, 'right': 7}
                    on_release: app.root.current = "altprecovenda"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Custos Totais'
                    pos_hint: {'top':2, 'right': 7}
                    on_release: app.root.current = "finfrete"
                    size_hint: 2, .8
                Button:
                    font_size: 0.4*self.height
                    text:'Demonstrativo de Resultados'
                    pos_hint: {'top':2, 'right': 7}
                    on_release: app.root.current = "capgiro"
                    size_hint: 2, .8

                    size_hint: 2, .8
        GridLayout:
            cols: 2
            height: self.minimum_height
            size_hint: .1, .1
            row_default_height: 60
            spacing: 50
            Label:
                text: ""
            Voltar:
                size_hint: 0.3, 0.1
                text_size: self.size
                halign: 'center'
                valign: 'center'
                on_release: app.root.current= "menu"
