<AltPosPessoaScreen>:
    id: altpospessoa
    name: "altpospessoa"
    scrl: scrl
    title:title
    back:back
    GridLayout:
        cols:1
        rows:3
        height: self.minimum_height
        size_hint: 1, 1
        row_default_height: 60
        Label:
            id: title
            name: "title"
            font_size: 0.6*self.height
            size_hint: 1,None
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1,1
            ScrollView:
                height: root.height * 1.5
                GridLayout:
                    id: scrl
                    name: "scrl"
                    rows: 3
                    height: self.minimum_height
                    padding: 100
                    spacing: 50
                    row_default_height: 60
                    col_default_width: 100
                    size_hint: 1,None
                    Button:
                        font_size: 0.2*self.height
                        size_hint: .1,.1
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 10
                        text: 'GASTOS COM PESSOAL DE PRODUCAO'
                        on_release: app.root.current = 'altpospessoa'
                    Button:
                        font_size: 0.2*self.height
                        size_hint: .1,.1
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 10
                        text: 'GASTOS COM PESSOAL ADMINISTRATIVO'
                        on_release: app.root.current = 'altpospessoa'
                    Button:
                        font_size: 0.2*self.height
                        size_hint: .1,.1
                        text_size: self.size
                        halign: 'center'
                        valign: 'center'
                        padding_y: 10
                        text: 'GASTOS COM DIRECAO'
                        on_release: app.root.current = 'altpospessoa'

        GridLayout:
            cols: 2
            height: self.minimum_height
            padding: 50
            size_hint: 0.1, 0.1
            row_default_height: 60
            col_default_width: 100
            spacing: 500
            id: back
            name: "back"